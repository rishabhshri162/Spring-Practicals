<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


   <!-- By using setter getter -->
	<bean id="user" class="com.rays.test.User">

		<property name="name" value="Rishabh"></property>    <!-- setName("Rishabh"); -->
		<property name="address" value="Indore"></property>   <!-- setAddress("Indore"); -->
		
	</bean>
	
	<bean id="user1" class="com.rays.test.User">

		<property name="name" value="Narendra"></property>     <!-- setName("Narendra"); -->
		<property name="address" value="Gujarat"></property>   <!-- setAddress("Gujarat"); -->
		
	</bean>
	
	<bean id="person" class="com.rays.test.Person">

		<property name="name" value="Rishabh"></property>    
		<property name="login" value="rishabh@gmail.com"></property>
		<property name="password" value="pass123"></property>   
		
	</bean>
	
	<bean id="order" class="com.rays.test.Order">

		<property name="product" value="TV"></property>    
		<property name="price" value="50000"></property>
		<property name="quantity" value="2"></property>   
		
	</bean>
	
	
	<!-- By using constructor -->
	<bean id="user2" class="com.rays.test.User">
	
	<constructor-arg value="Ram"></constructor-arg>            <!-- setName("Ram"); -->
	<constructor-arg value="Delhi"></constructor-arg>          <!-- setAddress("Delhi"); -->
	</bean>
	
	<bean id="person1" class="com.rays.test.Person">
	
	<constructor-arg value="Amit"></constructor-arg>           
	<constructor-arg value="Delhi"></constructor-arg>
	
	</bean>
	
	<bean id="order1" class="com.rays.test.Order">
	<constructor-arg value="Washing machine"></constructor-arg>
	<constructor-arg value="65000"></constructor-arg>
	<constructor-arg value="1"></constructor-arg>
	
	</bean>

</beans>